{
  "name": "maci-vkregistry-deployer",
  "version": "1.1.0",
  "description": "Factory contract to deploy VkRegistry contracts at the same address across chains",
  "scripts": {
    "build": "npx hardhat compile",
    "deploy": "npx hardhat run scripts/deploy.ts",
    "deploy:gnosis": "npx hardhat run scripts/deploy.ts --network gnosis",
    "deploy:arbitrum-goerli": "npx hardhat run scripts/deploy.ts --network arbitrum_goerli",
    "deploy:arbitrum": "npx hardhat run scripts/deploy.ts --network arbitrum",
    "test": "npx hardhat test test/VkRegistry.ts"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-network-helpers": "^1.0.6",
    "@nomiclabs/hardhat-ethers": "^2.1.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@openzeppelin/contracts": "^4.8.0",
    "@typechain/hardhat": "^6.1.3",
    "@types/chai": "^4.3.3",
    "@types/mocha": "^10.0.0",
    "chai": "^4.3.6",
    "dotenv": "^16.0.2",
    "ethers": "^5.7.1",
    "hardhat": "^2.11.2",
    "hardhat-contract-sizer": "^2.0.3",
    "maci-contracts": "^1.1.0",
    "mocha": "^10.0.0"
  }
}
